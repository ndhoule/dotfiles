[core]
	excludesfile = ~/.gitignore.global

[user]
	name = Nathan Houle
	email = nathan@nathanhoule.com

[color]
	ui = true

[hub]
	protocol = ssh

[mergetool]
	prompt = false

[diff]
	tool = ediff

[difftool]
	prompt = false

[branch]
	autosetuprebase = always

[alias]
	checkout-pr = "!git-checkout-pr"
	freebase = rebase
	up = "!git-update"

[push]
	default = current

[include]
	path = ~/.gitconfig.private
