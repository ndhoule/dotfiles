#!/usr/bin/env bash

#
# Shortcut to open the current default $EDITOR.
#
# Authors:
#   Zach Holman <zach@zachholman.com>
#   Nathan Houle <nathan@nathanhoule.com>
#
# Source:
#   https://github.com/holman/dotfiles
#

if [ "$1" = "" ]; then
  # shellcheck disable=SC2086
  exec $EDITOR .
else
  # shellcheck disable=SC2086
  exec $EDITOR "$@"
fi
