[core]
	excludesfile = ~/.gitignore.global

[user]
	name = Nathan Houle
	email = nathan@nathanhoule.com
	signingkey = 2A46563F6B85B9F751A48678882A2D6B15D4AD43

[github]
	user = ndhoule

[color]
	ui = true

[hub]
	protocol = ssh

[mergetool]
	prompt = false

[diff]
	tool = ediff

[difftool]
	prompt = false

[branch]
	autosetuprebase = always

[rebase]
	autosquash = true

[commit]
	gpgSign = true
	template = ~/.gitmessage
	verbose = true

[tag]
	gpgSign = true

[alias]
	amend = "!git-amend"
	checkout-pr = "!git-checkout-pr"
	get-commit-message = "!git log --format=%B -n 1"
	up = "!git-update"

[push]
	default = current
	followTags = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[include]
	path = ~/.gitconfig.private
