[core]
	editor = vim
	pager = vimpager
	excludesfile = /Users/nathanhoule/.gitignore.global
[merge]
	tool = Kaleidoscope
[alias]
    gu = !"git fetch origin -v ; git fetch upstream -v ; git merge upstream/master"
	logp = log --oneline --decorate
[credential]
	helper = osxkeychain
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool]
	prompt = false
